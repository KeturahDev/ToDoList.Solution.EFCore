@{
  Layout = "_Layout";
}
@* we take in model from controller *@
@using ToDoList.Models; 

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Item item in Model)
{
  <li>@item.Description</li> 
}

<p>@Html.ActionLink("Add new item", "Create")</p>
@* were already in items controller, so we dont need to say Items as third param *@